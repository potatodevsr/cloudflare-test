generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Task {
    id          Int       @id @default(autoincrement())
    title       String
    description String?
    status      String    @default("TODO")
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt
    deletedAt   DateTime?

    @@index([deletedAt])
    @@index([status])
}
